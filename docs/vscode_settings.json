{
  "// =====================================================": "",
  "// K리그 패스 예측 프로젝트 - Cursor 설정": "",
  "// 이 파일을 .vscode/settings.json에 저장": "",
  "// =====================================================": "",

  "// Python 환경 설정": "",
  "python.defaultInterpreterPath": "${workspaceFolder}\\venv\\Scripts\\python.exe",
  "python.terminal.activateEnvironment": true,
  "python.terminal.activateEnvInCurrentTerminal": true,
  
  "// Python 경로 설정 (모듈 import를 위해)": "",
  "python.analysis.extraPaths": [
    "${workspaceFolder}",
    "${workspaceFolder}/src"
  ],
  "python.autoComplete.extraPaths": [
    "${workspaceFolder}",
    "${workspaceFolder}/src"
  ],
  
  "// 자동 저장": "",
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  
  "// 파일 인코딩 (한글 지원)": "",
  "files.encoding": "utf8",
  "files.autoGuessEncoding": true,
  
  "// 포맷팅": "",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  
  "// Python 포맷터 (Black)": "",
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": [
    "--line-length=100",
    "--skip-string-normalization"
  ],
  
  "// Linting (코드 검사)": "",
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": [
    "--max-line-length=100",
    "--ignore=E501,W503"
  ],
  
  "// 자동완성 및 IntelliSense": "",
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.suggestOnTriggerCharacters": true,
  "editor.wordBasedSuggestions": true,
  "editor.parameterHints.enabled": true,
  
  "// Jupyter Notebook 설정": "",
  "jupyter.askForKernelRestart": false,
  "jupyter.interactiveWindow.textEditor.executeSelection": true,
  "jupyter.sendSelectionToInteractiveWindow": true,
  "jupyter.themeMatplotlibPlots": true,
  "jupyter.widgetScriptSources": ["jsdelivr.com", "unpkg.com"],
  "notebook.output.textLineLimit": 50,
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  
  "// 편집기 설정": "",
  "editor.fontSize": 14,
  "editor.lineHeight": 22,
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.rulers": [80, 100],
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.renderWhitespace": "boundary",
  
  "// 터미널 설정": "",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontFamily": "Consolas, 'Courier New', monospace",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.scrollback": 10000,
  
  "// 파일 탐색기 제외 (정리된 뷰)": "",
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true,
    "**/.ipynb_checkpoints": true,
    "**/*.egg-info": true,
    "**/venv": false,
    "**/.git": false
  },
  
  "// 검색 제외": "",
  "search.exclude": {
    "**/venv": true,
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/node_modules": true,
    "**/.ipynb_checkpoints": true
  },
  
  "// 파일 감시 제외 (성능 향상)": "",
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/venv/**": true,
    "**/node_modules/**": true,
    "**/__pycache__/**": true
  },
  
  "// Git 설정": "",
  "git.enabled": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  
  "// CSV 파일 미리보기": "",
  "csv-preview.separator": ",",
  "csv-preview.quoteMark": "\"",
  "csv-preview.hasHeaders": true,
  "csv-preview.capitalizeHeaders": true,
  "csv-preview.resizeColumns": "all",
  
  "// Python 테스트": "",
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": [
    "tests"
  ],
  
  "// 추가 언어별 설정": "",
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": false
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  
  "// Cursor 특화 설정": "",
  "cursor.general.enableShadowWorkspace": true,
  "cursor.cpp.disabledLanguages": [
    "java",
    "javascript",
    "typescript"
  ],
  
  "// 작업 영역 신뢰": "",
  "security.workspace.trust.untrustedFiles": "open"
}
